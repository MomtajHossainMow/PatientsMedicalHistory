<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#DBDCDC"
android:backgroundTint="#CFF8F6"
android:orientation="vertical"
    tools:context=".Doctor_Profile">


<TextView
    android:id="@+id/text_doctor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:fontFamily="@font/adamina"
    android:gravity="center"
    android:text="Profile of Doctor"
    android:textColor="#009688"
    android:textSize="34sp"
    android:textStyle="bold" />

<ImageView
    android:id="@+id/id_doctor_image"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:srcCompat="@drawable/doctor" />

<LinearLayout
    android:id="@+id/LinearLayout03"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#009688"
        android:fontFamily="@font/adamina"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="NID No"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/doctor_profile_nid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:hint="Enter Your NID No"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#000000" />
</LinearLayout>

<LinearLayout
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="20dp"
    android:animateLayoutChanges="false"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_doctor_Name"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#009688"
        android:fontFamily="@font/adamina"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Name"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/doctor_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:shadowColor="#FFFFFF"
        android:textColor="#000000"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>

<LinearLayout
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="20dp"
    android:animateLayoutChanges="false"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_Address"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#009688"
        android:fontFamily="@font/adamina"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Address"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/doctor_profile_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:hint="Enter Your Address"
        android:inputType="text"
        android:shadowColor="#FFFFFF"
        android:textColor="#000000"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="20dp"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_phone"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#009688"
        android:fontFamily="@font/adamina"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Phone"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/doctor_profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:hint="Enter Your Phone Number"
        android:inputType="phone"
        android:textColor="#000000" />
</LinearLayout>

<LinearLayout
    android:id="@+id/LinearLayout4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="20dp"
    android:animateLayoutChanges="false"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_Doc_mail"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#009688"
        android:fontFamily="@font/adamina"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/doctor_profile_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:hint="Enter Your Mail Address"
        android:inputType="textEmailAddress"
        android:shadowColor="#FFFFFF"
        android:textColor="#000000"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="20dp"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView9"
        style="?android:spinnerStyle"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#009688"
        android:fontFamily="@font/adamina"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="DOB"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/doctor_profile_dob"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/adamina"
        android:hint="Enter Your DOB"
        android:onClick="openDatePicker"
        android:textColor="#000000"
        android:textSize="20sp" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/SpecificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:animateLayoutChanges="false"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_doctor_Specification"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#009688"
            android:fontFamily="@font/adamina"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Specification"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/doctor_profile_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/adamina"
            android:hint="Enter Your Name"
            android:inputType="textPersonName"
            android:shadowColor="#FFFFFF"
            android:textColor="#000000"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

<Button
    android:id="@+id/button_update"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="100dp"
    android:backgroundTint="#009688"
    android:fontFamily="@font/adamina"
    android:text="Update"
    android:textStyle="bold" />

<Button
    android:id="@+id/button_delete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="100dp"
    android:backgroundTint="#A53B33"
    android:fontFamily="@font/adamina"
    android:text="Delete"
    android:textStyle="bold" />
</LinearLayout>